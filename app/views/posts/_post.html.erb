<div class="item-wrapper">
  <div class="item post <%= post.class.name.downcase %> <%= random_class_name %>" id="post_<%= post.id %>">
    <% if post.is_a? Photo -%>
      <%= image_tag post.url(:small) %>
    <% end -%>
    <h3 class="field title"><%= h(post.title) %></h3>
    <div class="field body">
      <%= simple_format(h(post.body)) %>
    </div>
    <p class="field name"><%= post.user.display_name %></p>
  </div>
</div>
